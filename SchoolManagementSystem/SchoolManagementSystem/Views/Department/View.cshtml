@model List<SchoolManagementSystem.Models.Departments>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="text-center">
    <h1 class="display-4">Department List</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Department Name</th>
                <th>Department Code</th>
                <th>Description</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var departments in Model)
            {
                <tr>
                    <td>@departments.DepartmentName</td>
                    <td>@departments.DepartmentCode</td>
                    <td>@departments.DepartmentDescription</td>
                    <td><a href="View/@departments.DepartmentId">View</a></td>
                    <td><a href="Delete/@departments.DepartmentId"><button type="button" id="delete" onclick="alert('Hello World!')">Delete</button></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>